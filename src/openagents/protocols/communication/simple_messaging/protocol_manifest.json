{
    "protocol_name": "simple_messaging",
    "version": "1.0.0",
    "description": "A simple messaging protocol for OpenAgents that supports direct and broadcast messaging with text and file attachments",
    "authors": ["OpenAgents Team"],
    "license": "MIT",
    "agent_adapter": "SimpleMessagingAgentAdapter",
    "network_protocol": "SimpleMessagingNetworkProtocol",
    "capabilities": [
        "simple_direct_messaging",
        "simple_broadcast_messaging",
        "simple_file_transfer"
    ],
    "dependencies": [],
    "metadata": {
        "max_file_size": 10485760,
        "supported_mime_types": [
            "text/plain",
            "text/html",
            "application/json",
            "application/xml",
            "application/pdf",
            "image/png",
            "image/jpeg",
            "image/gif",
            "audio/mpeg",
            "video/mp4",
            "application/zip",
            "application/gzip"
        ]
    }
} 